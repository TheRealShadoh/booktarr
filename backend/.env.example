# Database Configuration
DATABASE_URL=sqlite:///./booktarr.db

# Google Books API
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Amazon/Audible Integration (Optional)
AMAZON_CLIENT_ID=your_amazon_client_id_here
AMAZON_CLIENT_SECRET=your_amazon_client_secret_here
AMAZON_REDIRECT_URI=http://localhost:8000/auth/amazon/callback

# Cache Configuration
CACHE_FILE=book_cache.json

# Rate Limiting
API_RATE_LIMIT_DELAY=1.0