# BookTarr Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# ======================
# Backend Configuration
# ======================

# Server Port (should match docker-compose.yml)
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./data/booktarr.db

# Cache Configuration
CACHE_FILE=/app/cache/book_cache.json

# API Rate Limiting
API_RATE_LIMIT_DELAY=1.0

# CORS Origins (comma-separated list)
# For development: http://localhost,http://localhost:80,http://localhost:3000
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# ======================
# External API Keys
# ======================

# Google Books API Key
# Get your key at: https://developers.google.com/books/docs/v1/using#APIKey
GOOGLE_BOOKS_API_KEY=

# Amazon API Credentials
# Register at: https://developer.amazon.com/
AMAZON_CLIENT_ID=
AMAZON_CLIENT_SECRET=
AMAZON_REDIRECT_URI=http://localhost/auth/amazon/callback

# AniList API (no key required)
# OpenLibrary API (no key required)

# ======================
# Optional Configuration
# ======================

# Enable debug logging
DEBUG=false

# Application Environment
ENVIRONMENT=production

# Timezone
TZ=UTC

# ======================
# Docker-specific Settings
# ======================

# Container restart policy (unless-stopped, always, on-failure)
RESTART_POLICY=unless-stopped

# Health check interval (in seconds)
HEALTHCHECK_INTERVAL=30

# ======================
# Volume Paths (managed by Docker)
# ======================
# These are mounted automatically by docker-compose.yml
# - /app/data (database)
# - /app/static/covers (book covers)
# - /app/cache (metadata cache)
