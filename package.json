{
  "name": "booktarr",
  "version": "1.0.0",
  "description": "Full-stack book collection management system with React frontend and Python FastAPI backend",
  "keywords": [
    "books",
    "collection",
    "library",
    "isbn",
    "barcode",
    "metadata",
    "react",
    "fastapi",
    "typescript"
  ],
  "author": "BookTarr Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/booktarr.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0",
    "python": ">=3.8.0"
  },
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "dev:backend": "node scripts/dev-backend.js",
    "dev:frontend": "node scripts/dev-frontend.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && python -m build",
    "start": "npm run dev",
    "start:prod": "node scripts/prod-server.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest tests/",
    "test:frontend": "cd frontend && npm run test:ci",
    "test:e2e": "cd frontend && npm run test:playwright",
    "validate": "node scripts/validate-system.js",
    "setup": "node scripts/setup.js",
    "clean": "node scripts/clean.js",
    "cert:generate": "node scripts/generate-certs.js",
    "cert:clean": "node scripts/clean-certs.js"
  },
  "devDependencies": {
    "cross-spawn": "^7.0.3",
    "detect-port": "^1.5.1",
    "node-forge": "^1.3.1",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "concurrently": "^7.6.0"
  },
  "workspaces": [
    "frontend"
  ],
  "private": true
}